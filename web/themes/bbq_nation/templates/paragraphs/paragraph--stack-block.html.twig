{#
/**
 * @file
 * Theme implementation to for the stack block paragraph.
#}

{% extends "paragraph.html.twig" %}
{% block content %}
  <div class="paragraph paragraph__stack-block">
    <div class="layout-container">
    {% if content.field_title|render|striptags %}
      <div class="paragraph__title">
        {{ content.field_title }}
      </div>
    {% endif %}
    <div class="paragraph__stack-section row space-between">
      {{ content.field_stack_card }}
    </div>
  </div>
  </div>
{% endblock %}
